<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <padding android:top="2dp" android:bottom="2dp"
                android:left="2dp" android:right="2dp" />
            <solid android:color="#000000" />
            <corners android:bottomLeftRadius="12dp" android:topLeftRadius="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="12dp" android:bottomLeftRadius="12dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</ripple>